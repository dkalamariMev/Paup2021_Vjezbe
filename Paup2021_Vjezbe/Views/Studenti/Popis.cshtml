@using Paup2021_Vjezbe.Models
@model List<Student>
@{
    ViewBag.Title = "Popis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Popis</h2>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Prezime</th>
        <th>Ime</th>
        <th>Oib</th>
        <th>Redovan</th>
        <th>Detalji</th>
        <th>Ažuriranje</th>
    </tr>
    @foreach(var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Prezime</td>
            <td>@student.Ime</td>
            <td>@student.Oib</td>
            <td>@Html.CheckBox("chbRedovan", student.RedovniStudent, new { @disabled = "disabled" })</td>
            <td>@Html.ActionLink("Info", "Detalji", new { id = student.Id })</td>
            <td>@Html.ActionLink("Ažuriraj", "Azuriraj", new { id = student.Id })</td>
        </tr>
    }
</table>

